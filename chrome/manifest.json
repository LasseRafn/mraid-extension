{
	"manifest_version": 2,
	"name": "AppNexus MRAID Polyfill",
	"description": "View mobile ads on the desktop.",
	"version": "0.1",
	"icons": { "128": "icon128.png" },
	"permissions": [
		"storage",
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	],
	"page_action": {
		"default_icon": "icon128.png",
		"default_title": "AppNexus Browser MRAID"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"allframes": true,
		"js": ["content.js"]
	}]
}
